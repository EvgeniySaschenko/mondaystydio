.footer
	background url('../img/bg_gray.png')
	position relative
	.container
		display flex
		flex-direction row
		justify-content flex-start
		align-items flex-start
.footer
	&__left
	&__right
		width 50%
		min-height 280px
	&__left
		display flex
		flex-direction row
		justify-content flex-start
		align-items flex-start
		padding-top 70px
		box-sizing border-box
		.stack-word
			&_title
				margin-right 30px
				
@media phone
	.footer
		&__left
		&__right
			width 100%
		&__left
			flex-direction column
			justify-content center
			align-items center