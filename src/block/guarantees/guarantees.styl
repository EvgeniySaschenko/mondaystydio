.guarantees
	background url('../img/bg_white.png')
	.container
		display flex
		flex-wrap wrap
		flex-direction row
		justify-content space-between
		align-items flex-start
		padding-top 70px
		padding-bottom 70px
.guarantees
	&__left
	&__right
		width 50%
	&__left
		display flex
		flex-wrap wrap
		flex-direction row
		justify-content flex-start
		align-items flex-start
		
	
@media tablet
	.guarantees
		&__left
			margin-bottom 30px
		&__left
		&__right
			width 100%
			
@media phone
	.guarantees
		&__left
			flex-direction column
			justify-content center
			align-items center