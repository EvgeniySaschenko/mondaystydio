.header
	height 805px
	background url('../img/bg_gray.png')
	&__front
		background url('../img/bg_header_front.png') 0 0 no-repeat
		height 805px
		max-width 1300px
		margin 0 auto
	&__top
		padding-top 45px
		display flex
		flex-direction row
		justify-content space-between
		align-items flex-end
		flex-wrap wrap
		margin-bottom 80px
	&__left
		display flex
		flex-direction row
		justify-content flex-start
	&__right
		display flex
		flex-direction row
		justify-content space-between
	&__advantages
		display flex
		flex-direction column
		justify-content flex-start
		align-items flex-end
		text-align right
		position relative
	&__advantages-box
		position absolute
		z-index -5
	&__box_advantages-3
		display flex
		flex-direction row
		justify-content flex-end
		align-items flex-end
		margin-bottom 110px
	&__offer
		display flex
		flex-direction row
		justify-content flex-end
		align-items flex-end
		
@media phone
	.header
		&__left
			width 100%
			margin-bottom 30px
		&__right
			width 100%
		&__box_advantages-3
			margin-bottom 20px