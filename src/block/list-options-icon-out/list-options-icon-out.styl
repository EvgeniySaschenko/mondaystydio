.calculator
	.list-options-icon-out
		&_1
			max-width 400px
			display inline-block
			.item
				margin-bottom 17px
				display table
				&__icon
					margin-right 8px
				&__text-box
					display table-cell
				&__name
					display inline-block
				&__description 
					color #8c8c8c
					display inline
					line-height 1.3
			.button
				background #fff
				padding 0 0 15px 
				border-bottom 2px solid colorCorp
				color colorCorp
				display inline-block
				margin-left 15px
.advantages
	.list-options-icon-out
		&_advantages
			display flex
			flex-wrap wrap
			flex-direction row
			justify-content flex-start
			align-items flex-start
			.item-box
				width 50%
			.item
				margin-bottom 50px
				display table
				&__icon
					margin-right 45px
				&__text-box
					display table-cell
					vertical-align top
				&__name
					font-size 24px
					text-transform uppercase
					font-family FuturaNewDemiReg
				&__description 
					line-height 1.5
					
@media phone
	.advantages
		.list-options-icon-out
			&_advantages
				display flex
				flex-direction column
				justify-content center
				align-items center
				.item-box
					width auto