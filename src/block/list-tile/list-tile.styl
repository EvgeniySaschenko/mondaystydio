.our-works
	.list-tile
		margin 0 auto
		max-width 1300px
		display flex
		flex-wrap wrap
		flex-direction row
		justify-content space-between
		align-items flex-start
		.item
			overflow hidden
			height 390px
			&__box-text
				width 330px
				position absolute
				z-index 3
				top 30px
				left 30px
				color #fff
			&__name
				font-size 24px
				font-family FuturaNewBoldReg
				margin-bottom 15px
				text-transform uppercase
			&__description
				font-family FuturaNewBookReg
				line-height 1.3
			&__img
				width 100%
				filter: grayscale(100%)
			:hover
				filter: grayscale(0)
			&_0
			&_5
				width 540px
			&_1
			&_3
				width 390px
			&_2
			&_4
				width 370px
			&_1
			&_3
				.item__box-img-1
				.item__box-img-2
					display flex
					height 50%
					position relative
			&_1
				.item__box-img-1::after
					position absolute
					content ""
					top 0
					left 0
					width 100%
					height 100%
					background rgba(0, 0 , 0, .9)
					z-index 2
				.button
					color colorCorp
					background rgba(0, 0 , 0, 0)
					border-bottom 2px solid colorCorp
					padding 0 0 15px
					float right