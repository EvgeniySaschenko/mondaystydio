.header
	.stack-word
		&_advantages-1
			margin-bottom 60px
			.stack-word
				&__text
					font-family FuturaNewBoldReg
					background #fff
					display inline-block
					text-transform uppercase
				&__text_0
				&__text_2
					font-size 24px
				&__text_1
				&__text_3
					font-size 40px
				&__text_0
					padding 15px 20px 0 20px
